@using Clerk.Core
@using Clerk.Repositories.Models

@model IEnumerable<DepartmentInfo>

@{
    ViewData["Title"] = $"Структура організації";
}

<div class="pagetitle">
    <h1><i class="bi bi-briefcase"></i>&nbsp;&nbsp;@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Головна</a></li>
            <li class="breadcrumb-item active">Структура</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <h5 class="card-title">Перелік відділів</h5>

                    <ol class="list-group list-group-numbered">

                        @foreach (var d in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold">@d.Title</div>
                                    @foreach(var p in d.PostionAndPerson)
                                    {
                                        <div>@p.Key (<i>@p.Value</i>)</div>
                                    }
                                </div>
                                <span class="badge bg-primary rounded-pill">@d.PostionAndPerson.Count()</span>
                            </li>
                        }

                    </ol>

                </div>
            </div>
        </div>
    </div>
</section>
